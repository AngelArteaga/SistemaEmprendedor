@model  Sistemaemprendedor.Models.Usuarios
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/Buttons-1.4.2/css/buttons.dataTables.min.css" rel="stylesheet" />
<!--************************************
                Inner Banner Start
        *************************************-->
<div class="tg-innerbanner tg-haslayout">
    <div class="tg-pagetitle tg-bgred">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-pageheading">
                        <figure><img src="~/Content/Images/public/portada-04.png" alt="image description"></figure>
                        <h2 style="text-align:center">E C O S I S T E M A<span>E M P R E N D E D O R</span><span></span></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<!--************************************
        Inner Banner End
*************************************-->

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>                
                <li class="tg-active">Usuarios</li>
            </ol>
        </div>
    </div>
</div>

<div class="tg-Minisectionspace tg-haslayout">
    <div class="container">
        <div class="row">
            <div id="tg-twocolumns" class="tg-twocolumns">
                <div class="col-xs-12 col-md-10 col-lg-12">
                    <div id="tg-content" class="tg-content">
                        <div class="tg-sectionhead">
                            <div class="tg-sectiontitles">
                                <h2>Lista de Usuarios</h2>
                            </div>
                            <div class="tg-description">
                                <p></p>
                            </div>
                        </div>
                        <div class="tg-eventdetail">                            
                           <table id="Usuarios" class="display" cellspacing="0" width="100%">
                               <thead>
                                   <tr>
                                       <th>Email</th>
                                       <th>Estatus</th>
                                       <th>Acciones</th>
                                   </tr>
                               </thead>
                               <tbody>
                                   @foreach (var usuario in Model.UsersList)
                                   {
                                       <tr>
                                           <td>@usuario.Email</td>
                                           <td>@Model.UserStatus(usuario.Email)</td>
                                           <td>                                              
                                               <a href="/Account/Activate?username=@usuario.Email" style="float:initial" class=""><span class="glyphicon glyphicon-check"></span>Activar</a>                                               
                                               <a href="/Account/Deactivate?username=@usuario.Email" style="float:initial" class=""><span class="glyphicon glyphicon-remove"></span>Desactivar</a>       
                                               <a href="/Account/ResetPassword?Code=23" style="float:initial" class=""><span class="glyphicon glyphicon-refresh"></span> Cambiar contraseña  </a>                                               
                                           </td>
                                       </tr>
                                   }
                               </tbody>
                           </table>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
        <div class="row tg-Minisectionspace">
            <br />            
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#Usuarios').DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No se encontraron resultados",
                "info": "Mostrando Página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros disponibles",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "search": "Buscar:",
                "paginate": {
                    "previous": "Anterior",
                    "next": "Sigueinte"
                }
            },
            buttons: [
        'excel', 'pdf'
            ]
        });
    });
   
</script>