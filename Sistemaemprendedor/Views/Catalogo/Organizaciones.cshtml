@model  Sistemaemprendedor.Models.CatalogoModelo
@{
    ViewBag.Title = "Organizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--************************************
                Inner Banner Start
        *************************************-->
<div class="tg-innerbanner tg-haslayout">
    <div class="tg-pagetitle tg-bgred">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-pageheading">
                        <figure><img src="~/Content/Images/public/portada-04.png" alt="image description"></figure>
                        <h2 style="text-align:center">E C O S I S T E M A<span>E M P R E N D E D O R</span><span></span></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<!--************************************
        Inner Banner End
*************************************-->

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="tg-active">Organizaciones</li>
            </ol>
        </div>
    </div>
</div>

<!--************************************
                    Grid Start
*************************************-->
<div class="tg-sectionspace tg-haslayout">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">
                <div class="tg-sectionhead">
                    <div class="tg-sectiontitles">
                        <h2>Lista de organizaciones</h2>
                        <h3>Ecosistema emprendedor</h3>
                    </div>                    
                </div>
            </div>
            <div id="tg-twocolumns" class="tg-twocolumns">
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
                    <div id="tg-content" class="tg-content">
                        <div class="tg-cases">
                            <div class="row">
                                @foreach (var organizacion in Model.ListaDeEmpresas)
                                {
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4" region="@organizacion.IdRegion">
                                        <article class="tg-themepost tg-case">                                   
                                            <figure class="tg-themepostimg">                             
                                                <a href="javascript:void(0);"><img src="https://sestgpr.blob.core.windows.net/images/@organizacion.Imagen" style="background-color:  white;"/></a>
                                                <span class="tg-themepostlabel">@organizacion.Region</span>
                                            </figure>
                                            <div class="tg-themepostcontent">
                                                <div class="tg-themeposttitle">
                                                    <h3><a title="@organizacion.Nombre" href="javascript:void(0);">@organizacion.Nombre</a></h3>
                                                </div>
                                                <div class="tg-description">
                                                    <p class="block-with-text">@organizacion.Descripcion</p>
                                                </div>
                                                <a class="tg-btnreadmore" href="/Catalogo/Organizacion?id=@organizacion.id">Ver más...</a>
                                                <a class="tg-btnreadmore" href="javascript:void(0);"><i class="icon-arrow-right"></i></a>
                                            </div>
                                        </article>
                                    </div>
                                }                                                               
                            </div>
                        </div>
                        <div class="tg-tagsshare">
                            <div class="tg-tags">
                               
                                <ul class="tg-socialicons">
                                    
                                </ul>
                            </div>
                            <div class="tg-socialshare">

                            </div>
                        </div>                     
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 pull-left">
                    <aside id="tg-sidebar" class="tg-sidebar">
                        <div class="tg-btnarea">
                            <a class="tg-btn" href="@Url.Action("Evento", "Nuevo")">Agregar Organización</a>
                        </div>
                        <div class="tg-widget tg-widgetsearch">
                            <form class="tg-formtheme tg-formsearch">
                                <fieldset>
                                    <div class="form-group tg-inputwithicon">
                                        <i class="icon-magnifier"></i>
                                        <input type="search" name="search" class="form-control" placeholder="Busqueda">
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <div class="tg-widget tg-widgetcatagories">
                            <div class="tg-widgettitle">
                                <h3>Categoría</h3>
                            </div>
                            <ul>
                                <li><a onclick="SelectChanged(0);"><span>Todos</span></a></li>
                                @foreach (var Region in Model.ListaDeRegiones)
                                {
                                    <li>
                                        <a onclick="SelectChanged(@Region.Id);"><span>@Region.Nombre</span></a>
                                    </li>
                                }
                            </ul>
                        </div>                        
                    </aside>
                </div>
            </div>
        </div>            
        </div>
</div>
