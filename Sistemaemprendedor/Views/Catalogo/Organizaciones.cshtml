<script>
    function SelectChanged(tipoE) {
        els = document.querySelectorAll('div[region]');
        if(tipoE==0){
            for (i = 0; i < els.length; i++) {
                    els[i].style.display = 'block';
            }
        }else{
            for (i = 0; i < els.length; i++) {
                elatributo = els[i].getAttribute("region");
                if (elatributo == tipoE) {
                    els[i].style.display = 'block';
                    //alert('entra');
                } else {
                    els[i].style.display = 'none';
                    //alert('no entra');
                }
            }
    }
        }

</script>

