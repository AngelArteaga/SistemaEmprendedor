@model  Sistemaemprendedor.Models.CatalogoModelo
@{
    ViewBag.Title = "Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="tg-active">Eventos</li>
            </ol>
        </div>
    </div>
</div>

<div class="tg-haslayout">
    @if ((Model.ListaDeEventos != null) && (Model.ListaDeEventos.Count() > 0))
    {
        <!--************************************
                            Grid Start
        *************************************-->
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">
                    <div class="tg-sectionhead">
                        <div class="tg-sectiontitles">
                            <h2>Lista de eventos</h2>
                            <h3>Ecosistema emprendedor</h3>
                        </div>
                    </div>
                </div>
                <div id="tg-twocolumns" class="tg-twocolumns">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 pull-left">
                        <aside id="tg-sidebar" class="tg-sidebar">
                            <div class="tg-btnarea">
                                <a class="tg-btn" style="float:none" href="@Url.Action("Evento", "Nuevo")">Agregar Evento</a>
                            </div>
                            <div class="tg-widget tg-widgetsearch">
                                <form class="tg-formtheme tg-formsearch">
                                    <fieldset>
                                        <div class="form-group tg-inputwithicon">
                                            <i class="icon-magnifier"></i>
                                            <input type="search" name="search" class="form-control" placeholder="Busqueda">
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                            @if (Model.ListaDeTiposEvento.Count() > 1)
                            {
                                <div class="tg-widget tg-widgetcatagories">
                                    <div class="tg-widgettitle">
                                        <h3>Tipo de Eventos</h3>
                                    </div>
                                    <ul>
                                        <li><a onclick="SelectChanged(0);"><span>Todos</span></a></li>
                                        @foreach (var Tipo in Model.ListaDeTiposEvento)
                                        {
                                            <li>
                                                <a onclick="SelectChanged(@Tipo.idTipoEvento);"><span>@Tipo.Nombre</span></a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </aside>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
                        <div id="tg-content" class="tg-content">
                            <div class="tg-eventlist tg-eventlist-vtwo">                                
                                    @foreach (var Evento in Model.ListaDeEventos)
                                    {                                        
                                            <div class="tg-themepost tg-event tg-postleftimg" tipoevento=@Evento.idTipoEvento>
                                                <figure class="tg-themepostimg">
                                                    <a href="@Url.Action("Evento", "Catalogo", new { id = Evento.id })"><img src="@Evento.url" style="max-height:220px; max-width:370px"/></a>
                                                    <span class="tg-themepostlabel">@Model.TipoEvento(int.Parse(Evento.idTipoEvento.ToString()))</span>                                                    
                                                </figure>
                                                <div class="tg-themepostcontent">
                                                    <time class="tg-eventdatetime" datetime="@Evento.FechaEvento">@Evento.Month @Evento.Day, @Evento.Year @@ @Evento.HoraInicio</time>
                                                    <div class="tg-themeposttitle">
                                                        <h3><a href="@Url.Action("Evento", "Catalogo", new { id = Evento.id })">@Evento.Nombre</a></h3>
                                                    </div>
                                                    <div class="tg-description">
                                                        <p>@Evento.ShortDesc</p>
                                                    </div>
                                                    <a class="tg-btnreadmore" href="@Url.Action("Evento", "Catalogo", new { id = Evento.id })">Ver más...</a>
                                                    <a class="tg-btnreadmore" href="@Url.Action("Evento", "Catalogo", new { id = Evento.id })"><i class="icon-arrow-right"></i></a>
                                                </div>
                                            </div>                                        
                                    }                                                                    
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
        <!--************************************
                Grid End
        *************************************-->
    }
    else
    {
        <!--************************************
                    Sin Resultados
        *************************************-->
        <div class="container">
            <div class="tg-404error">
                <div class="tg-404errorcontet">
                    <h1>404</h1>
                    <div class="tg-404holder">
                        <h2>Lo sentimos!</h2>
                        <h3>No existen eventos registrados en este momento</h3>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">                    
                    <div class="tg-btnarea">
                        <a class="tg-btn" style="float:left" href="@Url.Action("Evento", "Nuevo")">Agregar Evento</a>
                        <a class="tg-btn" style="float:right" href="@Url.Action("Index", "Home")">Página principal</a>
                    </div>                    
                </div>
            </div>
        </div>
        <!--************************************
                404 Error End
        *************************************-->
    }    
</div>
<script>
    function SelectChanged(tipoE) {
        els = document.querySelectorAll('div[tipoevento]');
        if(tipoE==0){
            for (i = 0; i < els.length; i++) {               
                    els[i].style.display = 'block';                    
            }
        }else{
            for (i = 0; i < els.length; i++) {
                elatributo = els[i].getAttribute("tipoevento");
                if (elatributo == tipoE) {
                    els[i].style.display = 'block';
                    //alert('entra');
                } else {
                    els[i].style.display = 'none';
                    //alert('no entra');
                }
            }
    }        
        }
    
</script>