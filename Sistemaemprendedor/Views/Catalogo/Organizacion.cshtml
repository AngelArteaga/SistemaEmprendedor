@model  Sistemaemprendedor.Models.CatalogoModelo
@{
    ViewBag.Title = Model.Empresa.Nombre;
    <meta property="og:url" content="http://dev-sistemaemprendedor.azurewebsites.net/Catalogo/Organizacion?id=@Model.Empresa.id" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@Model.Empresa.Nombre" />    
    <meta property="og:image" content="https://sestgpr.blob.core.windows.net/images/@Model.Empresa.Imagen" />
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = "https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fdev-sistemaemprendedor.azurewebsites.net%2FCatalogo%2FOrganizacion%3Fid%3D" + Model.Empresa.id + "&amp;src=sdkpreparse";
}

<!--************************************
                Inner Banner Start
        *************************************-->
<div class="tg-innerbanner tg-haslayout">
    <div class="tg-pagetitle tg-bgred">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-pageheading">
                        <figure><img src="~/Content/Images/public/portada-04.png" alt="image description"></figure>
                        <h2 style="text-align:center">E C O S I S T E M A<span>E M P R E N D E D O R</span><span></span></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<!--************************************
        Inner Banner End
*************************************-->

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("Organizaciones", "Catalogo")">Organizaciones</a></li>
                <li class="tg-active">@Model.Empresa.Nombre</li>
            </ol>
        </div>
    </div>
</div>

<!--************************************
                    Grid Start
            *************************************-->
<div class="tg-sectionspace tg-haslayout">
    <div class="container">
        <div class="row">
            <div id="tg-twocolumns" class="tg-twocolumns">
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
                    <aside id="tg-sidebar" class="tg-sidebar">
                        <div class="tg-widget tg-widgetprofile">
                            <figure>                                
                                <img src="https://sestgpr.blob.core.windows.net/images/@Model.Empresa.Imagen" />
                            </figure>
                            <div id="tg-themetoggles" class="tg-themetoggles tg-sectionspace">
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="icon-user"></i>
                                        <a href="javascript:void(0);">Representante</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.RepresentanteLegal</i></b></p></center>
                                    </div>
                                </div>
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="icon-user"></i>
                                        <a href="javascript:void(0);">Enlace</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.Enlace</i></b></p></center>
                                    </div>
                                </div>
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="icon-user"></i>
                                        <a href="javascript:void(0);">Cargo del Enlace</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.CargoEnlace</i></b></p></center>
                                    </div>
                                </div>
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="icon-phone"></i>
                                        <a href="javascript:void(0);">Télefono</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.Telefono</i></b></p></center>
                                    </div>
                                </div>
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="icon-mail"></i>
                                        <a href="javascript:void(0);">Correo</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.Correo</i></b></p></center>
                                    </div>
                                </div>
                                <div class="tg-pannel">
                                    <h3 class="tg-panneltitle">
                                        <i class="fa fa-internet-explorer"></i>
                                        <a href="javascript:void(0);">Página Web</a>
                                    </h3>
                                    <div class="tg-pannelcontent" style="display: block;">
                                        <center><p><b><i>@Model.Empresa.PaginaWeb</i></b></p></center>
                                    </div>
                                </div>                                
                            </div>
                        </div>                        
                    </aside>
                </div>
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9">
                    <div id="tg-content" class="tg-content">
                        <div class="tg-attorneydetail">
                            <div class="tg-boxtitle">
                                <h3>@Model.Empresa.Nombre</h3>
                            </div>
                            <div class="tg-description">                               
                                <p>@Html.Raw(Model.Empresa.Descripcion)</p>                                                             
                                <div id="tg-twocolumns" class="tg-twocolumns">
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                        <ul class="tg-liststyle tg-liststyleicon tg-Minisectionspace">
                                            <li>
                                                <i class="fa fa-paste"></i><span class=""><b>Categoría</b></span>
                                                <ul class="tg-liststyle">
                                                    <li><span id="">@Model.Empresa.CategoriaDesc</span></li>
                                                </ul>
                                            </li>
                                            <li>
                                                <i class="fa fa-paste"></i><span class=""><b>Sector</b></span>
                                                <ul class="tg-liststyle">
                                                    <li><span id="">@Model.Empresa.Sector</span></li>
                                                </ul>
                                            </li>      
                                            <li>
                                                <i class="fa fa-check"></i><span class=""><b>¿Es reconocido por el INADEM?</b></span>
                                                <ul class="tg-liststyle">
                                                    <li><span id="">@Model.Empresa.ReconocidoPorINADEM</span></li>
                                                </ul>
                                            </li>                                      
                                        </ul> 
                                    </div>
                                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                        <ul class="tg-liststyle tg-liststyleicon tg-Minisectionspace">                                            
                                            <li>
                                                <i class="fa fa-map-marker"></i><span class=""><b>Región</b></span>
                                                <ul class="tg-liststyle">
                                                    <li><span id="">@Model.Empresa.Region</span></li>
                                                </ul>
                                            </li>
                                            <li>
                                                <i class="fa fa-map-marker"></i><span class=""><b>Municipio</b></span>
                                                <ul class="tg-liststyle">
                                                    <li><span id="">@Model.Empresa.Municipio</span></li>
                                                </ul>
                                            </li>                                            
                                        </ul>
                                    </div>                                   
                                </div>   
                                <ul class="tg-liststyle tg-liststyleicon tg-Minisectionspace">
                                    <li>
                                        <i class="fa fa-address-card"></i><span class=""><b>Dirección</b></span>
                                        <ul class="tg-liststyle">
                                            <li><span id="adressinmap">@Model.Empresa.Direccion</span></li>
                                        </ul>
                                    </li>
                                </ul>  
                                <div id="map" class="tg-Minisectionspace tg-locationmap">
                                </div>                               
                            </div>                                                                                                                                                                 
                        </div>
                    </div>
                </div>
            </div>            
        </div>
        <div class="row tg-Minisectionspace">
            <div class="tg-tagsshare">
                <div class="tg-tags">
                    <div class="two-column">
                        <span>   </span>
                        <span class="fb-share-button" data-href="http://dev-sistemaemprendedor.azurewebsites.net/Catalogo/Organizacion?id=@Model.Empresa.id" data-layout="button" data-size="large" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fdev-sistemaemprendedor.azurewebsites.net%2FCatalogo%2FOrganizacion%3Fid%3D1639&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartir</a></span>                        
                        <span class="twitter-share-button">
                            <a class="twitter-share-button"
                               href="https://twitter.com/share"
                               data-size="large"
                               data-text="¡Excelente Información!"
                               data-url="http://dev-sistemaemprendedor.azurewebsites.net/Catalogo/Organizacion?id=@Model.Empresa.id"
                               data-hashtags="ArtículoEmprendedor"
                               text="custom%20share%20text"
                               data-via="User"
                               data-related="twitterapi,twitter">
                                Tweet
                            </a>
                        </span>    
                    </div>
                                    
                </div>
            </div> 
        </div>
    </div>
</div>
<div id="fb-root"></div>
<!--************************************
        Grid End
*************************************-->
<script src="https://maps.google.com/maps/api/js?key=AIzaSyCVEyz3MC5-hyDW5wiloPstwj7DpAFvO8Y&language=es"></script>
<script src="~/Content/Map/gmaps.js"></script>
<script>
    //map
    var map = new GMaps({
        div: '#map',
        lat: -12.043333,
        lng: -77.028333,
        zoom: 18
    });
    var address;
    var callback;
    var status;
    var results;
    //geolocade
    GMaps.geocode({
        address: $('#adressinmap').text(),
        callback: function (results, status) {
            if (status == 'OK') {
                var latlng = results[0].geometry.location;
                map.setCenter(latlng.lat(), latlng.lng());
                map.addMarker({
                    lat: latlng.lat(),
                    lng: latlng.lng(),
                    infoWindow: {
                        content: '<p>@Model.Empresa.Direccion</p>',
                    },
                    mouseover: function () {
                        (this.infoWindow).open(this.map, this);
                    },
                    mouseout: function () {
                        this.infoWindow.close();
                    }
                });                
            }
        }
    });
    //fb share
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.11&appId=1690945784313516';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    //twitter share
    window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };

        return t;
    }(document, "script", "twitter-wjs"));
</script>