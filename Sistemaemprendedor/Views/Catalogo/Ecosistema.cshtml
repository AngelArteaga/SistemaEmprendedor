@using Sistemaemprendedor.Models
@model EcosistemaModelo
@{
    ViewBag.Title = "Ecosistema";
}

<link rel="stylesheet" href="~/Content/calendar/calendar.css">

<!--************************************
                Inner Banner Start
        *************************************-->
<div class="tg-innerbanner tg-haslayout">
    <div class="tg-pagetitle tg-bgred">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-pageheading">
                        <figure><img src="~/Content/Images/public/portada-04.png" alt="image description"></figure>
                        <h2 style="text-align:center">E C O S I S T E M A<span>E M P R E N D E D O R</span>R E G I O N A L<span></span></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<!--************************************
        Inner Banner End
*************************************-->
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("Regiones", "Catalogo")">Ecosistema Regional</a></li>
                <li class="tg-active">@Model.Region.Nombre</li>
            </ol>
        </div>
    </div>
</div>
<!--************************************
                    Events Start
            *************************************-->
<section class="tg-Minisectionspace tg-haslayout">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">                
                <div class="tg-sectionhead">
                    <div class="tg-sectiontitles">
                        <h2>@Model.Region.Nombre</h2>
                        <!--<h3>Región I</h3>-->
                    </div>
                    <div class="tg-description">
                       <p>@Model.ListaMunicipios</p>
                        <figure><img src="@Model.Region.URL" style="width: 30%;"/></figure>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="tg-shortcode tg-shortcodetabs">                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="tg-producttabs">
                                <ul class="tg-navtabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#description" role="tab" data-toggle="tab">Mapeo Organizaciones</a></li>
                                    <li role="presentation"><a href="#review" role="tab" data-toggle="tab">Organizaciones</a></li>
                                    @*<li role="presentation"><a href="#custom" role="tab" data-toggle="tab">Eventos</a></li>*@
                                </ul>
                                <div class="tg-producttabcontent tab-content">
                                    <div role="tabpanel" class="tg-tabpan tab-pane fade in active" id="description">
                                        <div id="gmap-dropdown" style="width:inherit;height:400px"></div>
                                    </div>
                                    <div role="tabpanel" class="tg-tabpan tab-pane fade in" id="review">
                                        @foreach (var org in Model.Organizaciones)
                                        {                                            
                                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4 organizaciones" style="min-height:340px">
                                                <div class="tg-feature">
                                                    <span class="tg-iconbox"><img src="https://sestgpr.blob.core.windows.net/images/@org.Imagen" style="height:50px;" /></span>
                                                    <div class="tg-title"><h3><a title="@org.Nombre" style="color:#003953" href="/Catalogo/Organizacion?id=@org.id">@org.Nombre</a></h3></div>
                                                    <div class="tg-description">

                                                    </div>
                                                    <a class="tg-btnreadmore" href="/Catalogo/Organizacion?id=@org.id"><i class="icon-arrow-right"></i></a>
                                                </div>
                                            </div>
                                        }                                                                          
                                    </div>
                                    <div role="tabpanel" class="tg-tabpan tab-pane fade in" id="custom">
                                        <div id="calendar"></div>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
        <div class="row tg-sectionspace"></div>
    </div>

</section>
<!--************************************
        Events End
*************************************-->



<script src="https://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.22&key=AIzaSyBVaMIh9CTULiR0cvbvyeF3X8f0GS7cfy0"></script>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="~/Content/Template/js/maplace.js"></script>
<script src="~/Content/calendar/jquery.min.js"></script>
