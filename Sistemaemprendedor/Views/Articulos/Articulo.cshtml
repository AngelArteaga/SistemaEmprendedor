@model  Sistemaemprendedor.Models.CategoriasArticulosModelo
@{
    ViewBag.Title = "Articulo";
    <meta property="og:url" content="http://dev-sistemaemprendedor.azurewebsites.net/Articulos/Articulo?id=@Model.Articulo.Id" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@Model.Articulo.Nombre" />
    <meta property="og:image" content="https://sestgpr.blob.core.windows.net/images/@Model.Articulo.Imagen" />
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = "https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fdev-sistemaemprendedor.azurewebsites.net%2FArticulos%2FArticulo%3Fid%3D" + Model.Articulo.Id + "&amp;src=sdkpreparse";
}
<!--************************************
                Inner Banner Start
        *************************************-->
<div class="tg-innerbanner tg-haslayout">
    <div class="tg-pagetitle tg-bgred">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-pageheading">
                        <figure><img src="~/Content/Images/public/portada-04.png" alt="image description"></figure>
                        <h2 style="text-align:center">E C O S I S T E M A<span>E M P R E N D E D O R</span><span></span></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ol class="tg-breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("Categorias", "Articulos")">Articulos de Interés</a></li>
                <li class="tg-active">@Model.Articulo.Nombre</li>
            </ol>
        </div>
    </div>
</div>
<!--************************************
                Inner Banner Start
        *************************************-->

<!--************************************
        Inner Banner End
*************************************-->
<div class="tg-Minisectionspace tg-haslayout">
    <div class="container">
        <div class="row">       
                <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">                    
                    <div class="tg-sectionhead">
                        <div class="tg-sectiontitles">
                            <h2>@Model.Articulo.Nombre</h2>
                            <i class="icon-user"></i> <h3>   @Model.Articulo.Autor / <i class="icon-calendar"> @Model.Articulo.Fecha.ToShortDateString()</i></h3>
                        </div>                                             
                    </div>
                </div>     
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div id="tg-content" class="tg-content">
                        <div class="tg-caseresultdetail">                            
                            <div class="tg-detailbox tg-challenges tg-Minisectionspace">
                                <div class="tg-description">
                                    <p style="color: grey;"><i>@Model.Articulo.Introduccion</i></p>
                                </div>
                            </div> 
                            <div class="tg-detailbox tg-challenges tg-Minisectionspace">
                                <div class="tg-description">
                                   
                                </div>
                            </div> 
                            <figure class="tg-themepostimg">                                
                                <img src="https://sestgpr.blob.core.windows.net/images/@Model.Articulo.Imagen">
                            </figure>                            
                            <div class="tg-detailbox tg-challenges tg-Minisectionspace">                                
                                <div class="tg-description">
                                    @Html.Raw(Model.Articulo.Descripcion)
                                </div>
                            </div>                          
                        </div>
                    </div>
                </div>                           
        </div>
        <div class="row tg-Minisectionspace">
            <div class="tg-tagsshare tg-Minisectionspace">
                <div class="tg-tags">
                    <div class="two-column">
                        <span>   </span>
                        <span class="fb-share-button" data-href="http://dev-sistemaemprendedor.azurewebsites.net/Articulos/Articulo?id=@Model.Articulo.Id" data-layout="button" data-size="large" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fdev-sistemaemprendedor.azurewebsites.net%2FCatalogo%2FOrganizacion%3Fid%3D1639&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartir</a></span>
                        <span class="twitter-share-button">
                            <a class="twitter-share-button"
                               href="https://twitter.com/share"
                               data-size="large"
                               data-text="¡Excelente Información!"
                               data-url="http://dev-sistemaemprendedor.azurewebsites.net/Articulos/Articulo?id=@Model.Articulo.Id"
                               data-hashtags="ArtículoEmprendedor"
                               text="custom%20share%20text"
                               data-via="User"
                               data-related="twitterapi,twitter">
                                Tweet
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row tg-Minisectionspace"></div>
    </div>
</div>
<div id="fb-root"></div>
<!--************************************
        Grid End
*************************************-->
<script src="https://maps.google.com/maps/api/js?key=AIzaSyCVEyz3MC5-hyDW5wiloPstwj7DpAFvO8Y&language=es"></script>
<script src="~/Content/Map/gmaps.js"></script>
<script>
    //fb share
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.11&appId=1690945784313516';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    //twitter share
    window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };

        return t;
    }(document, "script", "twitter-wjs"));
</script>